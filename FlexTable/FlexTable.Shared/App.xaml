<Application
    x:Class="FlexTable.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FlexTable"
    RequestedTheme="Light">

    <Application.Resources>
        <ResourceDictionary>
            <x:Double x:Key="RowHeight">20</x:Double>
            <x:Double x:Key="RowHeaderWidth">40</x:Double>
            <x:Double x:Key="ColumnHeaderHeight">30</x:Double>
            <SolidColorBrush x:Key="GridLineBrush" Color="#EEEEEE" />
            
            <GridLength x:Key="RowHeaderWidthInGridLength">40</GridLength>
            <GridLength x:Key="ColumnHeaderHeightInGridLength">30</GridLength>
            
            <Style TargetType="TextBlock" x:Key="CellStyle">
                <Setter Property="Padding" Value="10 2" />
                <Setter Property="Height" Value="24" />
                <Setter Property="TextAlignment" Value="Center" />
                <Setter Property="FontFamily" Value="Roboto" />
            </Style>

            <Style TargetType="TextBlock" x:Key="RowHeaderStyle">
                <Setter Property="Padding" Value="10 2" />
                <Setter Property="Height" Value="24" />
                <Setter Property="TextAlignment" Value="Center" />
                <Setter Property="Width" Value="{StaticResource RowHeaderWidth}" />
                <Setter Property="FontWeight" Value="Bold" />
            </Style>

            <Style TargetType="TextBlock" x:Key="ColumnHeaderStyle">
                <Setter Property="Padding" Value="10 2" />
                <Setter Property="TextAlignment" Value="Center" />
                <Setter Property="FontWeight" Value="Bold" />
            </Style>

            <Style TargetType="Rectangle" x:Key="RowGuidelineStyle0">
                <Setter Property="Height" Value="{StaticResource RowHeight}"/>
                <Setter Property="Fill" Value="#FFFFFF" />
                <Setter Property="VerticalAlignment" Value="Bottom" />
            </Style>

            <Style TargetType="Rectangle" x:Key="RowGuidelineStyle1">
                <Setter Property="Height" Value="{StaticResource RowHeight}"/>
                <Setter Property="Fill" Value="#F5F5F5" />
                <Setter Property="VerticalAlignment" Value="Bottom" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
