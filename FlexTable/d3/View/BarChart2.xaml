<UserControl
    x:Class="d3.View.BarChart2"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:d3.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:com="using:d3.Component"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400"
    >
    
    <Canvas Width="{Binding Width}" Height="{Binding Height}">
        <com:Rectangles Data="{Binding ChartData}" WidthGetter="{Binding HandleWidthGetter}" HeightGetter="{Binding HandleHeightGetter}" 
                               XGetter="{Binding HandleXGetter}" YGetter="{Binding HandleYGetter}" ColorGetter="{Binding HandleColorGetter}"
                        x:Name="HandleRectangleElement"/>
        
        <com:Rectangles Data="{Binding ChartData}" WidthGetter="{Binding WidthGetter}" HeightGetter="{Binding HeightGetter}" 
                               XGetter="{Binding XGetter}" YGetter="{Binding YGetter}" ColorGetter="{Binding ColorGetter}"
                        OpacityGetter="{Binding OpacityGetter}"
                        IsHitTestVisible="False" x:Name="RectangleElement"/>
        
        <com:Axis Orientation="Horizontal" Scale="{Binding XScale}" Canvas.Top="{Binding ChartAreaEndY}" Canvas.Left="0" x:Name="HorizontalAxis"
                  Visibility="{Binding HorizontalAxisVisibility}" LabelFontSizeGetter="{Binding LabelFontSizeGetter}"/>
        
        <TextBlock TextAlignment="Center" Canvas.Top="{Binding HorizontalAxisLabelCanvasTop}" Canvas.Left="{Binding HorizontalAxisLabelCanvasLeft}"
                   Width="{Binding HorizontalAxisLabelWidth}" Visibility="{Binding HorizontalAxisVisibility}" FontSize="12" Text="{Binding HorizontalAxisLabel}"></TextBlock>
        
        <com:Axis Orientation="Vertical" Scale="{Binding YScale}" Canvas.Top="0" Canvas.Left="{Binding VerticalAxisCanvasLeft}" x:Name="VerticalAxis"/>
        <TextBlock TextAlignment="Center" Canvas.Top="{Binding VerticalAxisLabelCanvasTop}" Canvas.Left="{Binding VerticalAxisLabelCanvasLeft}"
                   Width="{Binding VerticalAxisLabelHeight}" FontSize="12" Text="{Binding VerticalAxisLabel}">
            <TextBlock.RenderTransformOrigin>0.5 0.5</TextBlock.RenderTransformOrigin>
            <TextBlock.RenderTransform>
                <RotateTransform Angle="-90"/>
            </TextBlock.RenderTransform>
        </TextBlock>
        
        <Canvas x:Name="LegendPanel">
            <com:Rectangles Data="{Binding ChartData}" WidthGetter="{Binding LegendHandleWidthGetter}" 
                                   HeightGetter="{Binding LegendHandleHeightGetter}" XGetter="{Binding LegendHandleXGetter}" 
                                   YGetter="{Binding LegendHandleYGetter}" ColorGetter="{Binding HandleColorGetter}"
                                   x:Name="LegendHandleRectangleElement" 
                                   Visibility="{Binding LegendVisibility}"
                            />
            
            <com:Rectangles Data="{Binding ChartData}" WidthGetter="{Binding LegendPatchWidthGetter}" 
                                   HeightGetter="{Binding LegendPatchHeightGetter}" XGetter="{Binding LegendPatchXGetter}" 
                                   YGetter="{Binding LegendPatchYGetter}" ColorGetter="{Binding ColorGetter}"
                                    OpacityGetter="{Binding OpacityGetter}"
                                   x:Name="LegendRectangleElement" IsHitTestVisible="False"
                            Visibility="{Binding LegendVisibility}"
                            />

            <com:Texts Data="{Binding ChartData}" TextGetter="{Binding LegendTextGetter}"
                       HeightGetter="{Binding LegendPatchHeightGetter}"
                       XGetter="{Binding LegendTextXGetter}" YGetter="{Binding LegendPatchYGetter}" 
                       ColorGetter="{Binding LegendTextColorGetter}" x:Name="LegendTextElement"
                       OpacityGetter="{Binding TextOpacityGetter}"
                       Visibility="{Binding LegendVisibility}" IsHitTestVisible="False"
                       />
        </Canvas>
        
        <com:Texts Data="{Binding IndicatorData}" TextGetter="{Binding IndicatorTextGetter}"
                   WidthGetter="{Binding IndicatorWidthGetter}"
                   XGetter="{Binding IndicatorXGetter}" YGetter="{Binding IndicatorYGetter}" 
                   OpacityGetter="{Binding TextOpacityGetter}"
                   Foreground="Black" FontSize="14" x:Name="IndicatorTextElement"
                   
                   />
    </Canvas>
</UserControl>
