    <ListView ItemsSource="{Binding Cells}"
              SelectionMode="None">
        <ListView.ItemsPanel>
            <ItemsPanelTemplate>
                <StackPanel Orientation="Horizontal" />
            </ItemsPanelTemplate>
        </ListView.ItemsPanel>
        <ListView.RenderTransform>
            <CompositeTransform x:Name="CompositeTransform"/>
        </ListView.RenderTransform>
        <ListView.ItemTemplate>
            <DataTemplate x:DataType="model:Cell">
                <TextBlock Text="{x:Bind Path=RawContent}" Width="{x:Bind Path=ColumnViewModel.Width}" Style="{StaticResource CellStyle}"/>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
    <!--<StackPanel Orientation="Horizontal" x:Name="Wrapper">
