        <TextBlock Style="{StaticResource TitleStyle}">
            <Run Text="{Binding SheetName}" />
        </TextBlock>
        <Grid Margin="50 30 50 20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>

            <Border Grid.Column="0" Grid.Row="0" Style="{StaticResource TeaserHeaderStyle}">
                <TextBlock Style="{StaticResource TeaserHeaderTextStyle}">Rows</TextBlock>
            </Border>
            <Border Grid.Column="1" Grid.Row="0" Style="{StaticResource TeaserHeaderStyle}">
                <TextBlock Style="{StaticResource TeaserHeaderTextStyle}">Columns</TextBlock>
            </Border>

            <Border Grid.Column="0" Grid.Row="1" Style="{StaticResource TeaserValueStyle}">
                <TextBlock Text="{Binding RowCount}" Style="{StaticResource TeaserValueTextStyle}"/>
            </Border>
            <Border Grid.Column="1" Grid.Row="1" Style="{StaticResource TeaserValueStyle}">
                <TextBlock Text="{Binding ColumnCount}" Style="{StaticResource TeaserValueTextStyle}"/>
            </Border>
        </Grid>
        
        <TextBlock Style="{StaticResource TextBlockStyle}">
            &#x2022; <Run Text="{Binding CategoricalColumnCount}"></Run> categorical columns and <Run Text="{Binding NumericalColumnCount}"></Run> numerical columns.
        </TextBlock>
        <Button x:Name="LoadFile" Click="LoadFile_Click">Load a CSV File</Button>
    </StackPanel>
</UserControl>
